  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.14.0"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/express": "^4.0.34",
    "@types/node": "^6.0.54",
    "awesome-typescript-loader": "^3.0.0-beta.17",
    "concurrently": "^3.1.0",
    "nodemon": "^1.11.0",
    "typescript": "^2.1.4",
    "webpack": "^1.14.0"
  }
}
